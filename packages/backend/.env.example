# Server Configuration
PORT=3000
NODE_ENV=development

# Database (Cosmos DB with MongoDB API)
MONGODB_URI=mongodb://localhost:27017/thecms

# Microsoft Entra External ID Configuration
AZURE_ENTRA_TENANT_NAME=your-tenant-name
AZURE_ENTRA_TENANT_ID=your-tenant-id
AZURE_ENTRA_CLIENT_ID=your-backend-client-id

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=media

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Application Insights (Optional for local dev)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000
