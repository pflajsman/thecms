# Server Configuration
PORT=3000
NODE_ENV=development

# Database (Cosmos DB with MongoDB API)
MONGODB_URI=mongodb://localhost:27017/thecms

# Azure AD B2C Configuration
AZURE_AD_B2C_TENANT_NAME=your-tenant-name
AZURE_AD_B2C_CLIENT_ID=your-backend-client-id
AZURE_AD_B2C_POLICY_NAME=B2C_1_signupsignin
AZURE_AD_B2C_ISSUER=https://your-tenant-name.b2clogin.com/your-tenant-id/v2.0/

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=media

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Application Insights (Optional for local dev)
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
